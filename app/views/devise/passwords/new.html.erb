<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, class: 'login-form') do |f| %>
  <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.label :email, autofocus: true, class: 'control-label visible-ie8 visible-ie9' %>
      <div class="input-icon">
        <i class="icon-envelope"></i>
        <%= f.email_field :email, autofocus: true, class:'form-control placeholder-no-fix', placeholder: 'Email' %>
      </div>
    </div>

  <div><%= f.submit 'Enviar Email para restaurar', class: 'btn green ' %></div>
<% end %>

