<h3 class="form-title">Accede a tu Cuenta</h3>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'login-form') do |f| %>
    <div class="form-group">
    <%= f.label :email, class: 'control-label visible-ie8 visible-ie9' %>
      <div class="input-icon">
        <i class="icon-envelope"></i>
        <%= f.email_field :email, autofocus: true, class:'form-control placeholder-no-fix', placeholder: 'Email' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label 'Contraseña', class: 'control-label visible-ie8 visible-ie9' %>
      <div class="input-icon">
        <i class="icon-user"></i>
        <%= f.password_field :password, autocomplete: "off", class:'form-control placeholder-no-fix', placeholder: 'Contraseña' %>
      </div>
    </div>

    <div class="form-actions">
      <% if devise_mapping.rememberable? -%>
          <label class="checkbox">
            <%= f.check_box :remember_me %> <%= f.label 'Recordarme?'%>
          </label>
      <% end -%>

      <%= f.submit 'Acceder', class: 'btn green pull-right' %>
    </div>
<% end %>

<div class="forget-password">
    <%= render "devise/shared/links" %>
</div>