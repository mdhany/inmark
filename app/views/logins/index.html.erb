<% @title = 'Mis Referidos' %>

<div class="portlet box green">
  <div class="portlet-title">
    <div class="caption"><i class="icon-picture"></i>Usuarios</div>
    <div class="tools">
      <a class="collapse" href="javascript:;"></a>
      <a class="reload" href="javascript:;"></a>
    </div>
  </div>
  <div class="portlet-body">
    <div class="table-responsive">
      <table class="table table-condensed table-hover">
        <thead>
        <tr>
          <th>Usuario</th>
          <th>Aula</th>
          <th>Nombre</th>
          <th>Email</th>
          <th>Telefono</th>
          <th>Pa√≠s</th>
        </tr>
        </thead>

        <tbody>
        <% @logins.each do |user| %>
            <tr>
              <td><%= user.username %></td>
              <td>
                <% if user.level_id == 1 %>
                     <%= link_to user.room_id, room_path(user.room, user.id), class: "btn label label-default" unless user.room.nil? %>
                  <% else %>
                    <%= link_to user.room_id, room_path(user.room, user.id), class: "btn label label-success" unless user.room.nil? %>
                  <% end %>

              </td>
              <td><%= "#{user.first_name} #{user.last_name}" %></td>
              <td><%= link_to user.email, "mailto:#{user.email}" %></td>
              <td><%= user.phone %></td>

              <td><%= user.country %></td>

            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

