                    <%= link_to  'Acceder', logins_sign_in_path, class: 'dropdown-toggle' %>
                  </li>
              <% end %>
            </ul>
          </nav>
        </div>
      </div>


    </div>
  </header>

  <div role="main" class="main">
    <div id="content" class="content full">


      <div class="container">

        <div class="row">
          <div class="span1"></div>
          <div class="span10 ">
            <h2 class="short"><%= @page.title %></h2>
            <%== @page.content if !@page.nil? %>
          </div>
        </div>
      </div>

    </div>
  </div>

  <footer>

    <div class="footer-copyright">
