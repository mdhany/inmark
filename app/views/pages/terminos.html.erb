<div class="body">
  <header>
    <div class="container">
      <div class="">
        <div class="span4 offset2">
          <h1 class="logo">
            <a href="/">
              <img alt="INMARK & Business School" src="images/logo-ss.png">
            </a>
          </h1>
        </div>
        <div class="span2">
        </div>
        <div class="span3">
          <nav>
            <ul class="nav nav-pills nav-main" id="mainMenu">
